<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/complementary"
    android:orientation="vertical"
    tools:context=".ui.assignments.AssignmentsFragment">



    <Switch
        android:background="@drawable/dialog_box"
        android:id="@+id/assignment_filter_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter by Course"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_assignments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/assignemnts_list"
        android:nestedScrollingEnabled="true">
    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>
